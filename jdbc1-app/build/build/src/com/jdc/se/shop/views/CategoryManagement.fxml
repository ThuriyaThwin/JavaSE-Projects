<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdc.se.shop.views.CategoryManagement">
   <stylesheets>
      <URL value="@color.css" />
      <URL value="@layout.css" />
   </stylesheets>
   <styleClass>
      <String fx:value="contentView" />
      <String fx:value="padd20" />
      <String fx:value="space10" />
   </styleClass>
   <children>
      <ScrollPane hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
         <content>
            <FlowPane fx:id="flowPane" hgap="10.0" styleClass="flowContent" vgap="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></FlowPane>
         </content>
      </ScrollPane>
      <HBox>
         <children>
            <TextField fx:id="name" promptText="Enter Category Name">
               <styleClass>
                  <String fx:value="width300" />
                  <String fx:value="fs20" />
               </styleClass>
            </TextField>
            <Button mnemonicParsing="false" onAction="#addNew" text="Add New">
               <styleClass>
                  <String fx:value="width300" />
                  <String fx:value="HilightBack" />
                  <String fx:value="HilightText" />
                  <String fx:value="fs20" />
               </styleClass>
            </Button>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#upload" text="Upload Category">
               <styleClass>
                  <String fx:value="width300" />
                  <String fx:value="HilightBack" />
                  <String fx:value="HilightText" />
                  <String fx:value="fs20" />
               </styleClass>
            </Button>
         </children>
         <styleClass>
            <String fx:value="space10" />
            <String fx:value="right" />
         </styleClass>
      </HBox>
   </children>
</VBox>
